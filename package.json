{
  "name": "claude-time-tracker",
  "version": "1.0.0",
  "description": "CLI tool that auto-tracks Claude Code sessions, stores them in SQLite + Airtable, summarizes via Claude API, and emails reports via Resend",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-tracker": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andysantamaria0/claude-time-tracker.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "time-tracking",
    "session-tracker",
    "cli"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "airtable": "^0.12.2",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "inquirer": "^12.3.2",
    "ora": "^8.1.1",
    "resend": "^4.1.2",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
